extends layout

block vars
  - var h1 = "Admin User List"

block content
    //h1 Users

    p Click on a user below to "log in" as that user

    if users.length
      .row
        for user in users
          .col-md-3.col-sm-4
            .panel.panel-default
                .panel-heading
                  a(href='/users/#{user.id}') #{user.name}
                  //                  .pull-right
                  //                    // <div class="btn-group">
                  //                    button.btn.btn-success.btn-circle.btn-stoplight.green-button(type='button')
                  //                    | &#x9;&#x9;&#x9;&#x9;
                  //                    button.btn.btn-warning.btn-circle.btn-stoplight.yellow-button(type='button')
                  //                    | &#x9;&#x9;&#x9;&#x9;
                  //                    button.btn.btn-danger.btn-circle.btn-stoplight.red-button(type='button')
                // /.panel-heading
                //#panel-background.panel-body.user-panel-green
                #panel-background.panel-body
                  .user-picture
                    a(href='/users/#{user.id}')
                      img(src='/pages/img/#{user.picture}.png')
                      
    else
      p There are no users currently.
      
    .row
      .col-md-6(style='padding-bottom: 100px')
        form(action='', method='POST')
          .form-inline
            .form-group(style="width: 70%")
              //label(for='inputUser') Create a new user
              input#inputUser.form-control(type='text', name='name', placeholder="Enter a new user's name", style='width: 100%', required)
              input#inputUser.form-control(type='text', name='major', placeholder="Enter a new user's major", style='width: 100%', required)
              input#inputUser.form-control(type='text', name='location', placeholder="Enter a new user's location", style='width: 100%', required)
              input#inputUser.form-control(type='text', name='blfrelation', placeholder="Enter a new user's relation to BLF", style='width: 100%', required)
              input#inputUser.form-control(type='text', name='picture', placeholder="Enter a new user's picture (name)", style='width: 100%', required)
              input#inputUser.form-control(type='text', name='bio', placeholder="Enter a new user's bio", style='width: 100%', required)
              button.btn.btn-success.pull-right(type='submit', value='Create', style='margin-left: 5px;') Create