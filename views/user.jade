block scripts
    script.
      $('.green-button').click( function() {
        var element = this;
        $.ajax({
            url: '/users/#{user.id}/follow',
            type: 'post',
            data: $(this),
            success: function(data) {
              $(element).closest('.panel').find('#panel-background').removeClass('user-panel-red').addClass('user-panel-green');
            }
        });
      });
      
      // NEED YELLOW
      
      $('.red-button').click( function() {
        var element = this;
        $.ajax({
            url: '/users/#{user.id}/unfollow',
            type: 'post',
            data: $(this),
            success: function(data) {
              $(element).closest('.panel').find('#panel-background').removeClass('user-panel-green').addClass('user-panel-red');
            }
        });
      });